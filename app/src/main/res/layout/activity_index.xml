<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.IndexActivity"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:id="@+id/drawerLayout">
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/header"
        app:menu="@menu/slding_menu"
        android:layout_gravity="start"
        >

    </com.google.android.material.navigation.NavigationView>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/_40sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                app:navigationIcon="@mipmap/menu"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/toolbar"
                android:clickable="true"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp">
            </androidx.appcompat.widget.Toolbar>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="@dimen/_40ssp"
                    android:textColor="@color/slategrey"
                    android:fontFamily="cursive"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_5sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="@color/dimgray"
                    android:text="@string/indexTitle"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_10sdp">
                </TextView>
            </LinearLayout>
            <ImageView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:background="@mipmap/dog9"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                >
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_10sdp"
            >
            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:id="@+id/strayPostbtn"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_160sdp"
                    android:orientation="horizontal"
                    android:clickable="true">
                    <LinearLayout
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_140sdp"
                        android:orientation="vertical"
                        android:background="@drawable/post_stray">
                        <TextView
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/strayPostTitle"
                            android:textSize="@dimen/_20ssp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:fontFamily="cursive">
                        </TextView>
                        <ImageView
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:background="@mipmap/camera_white"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_15sdp">
                        </ImageView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/straySquarebtn"
                    android:clickable="true"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:orientation="vertical"
                    android:background="@drawable/stray_square">
                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/straySquareTitle"
                        android:textSize="@dimen/_20ssp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:fontFamily="cursive">
                    </TextView>
                    <ImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:background="@mipmap/gallery_white"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp">
                    </ImageView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_15sdp"
                >
                <LinearLayout
                    android:id="@+id/lostSquarebtn"
                    android:clickable="true"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:orientation="vertical"
                    android:background="@drawable/lost_square">
                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/lostSquareTitle"
                        android:textSize="@dimen/_20ssp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:fontFamily="cursive">
                    </TextView>
                    <ImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:background="@mipmap/lost_dog_white"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp">
                    </ImageView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lostPostbtn"
                    android:clickable="true"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_140sdp"
                    android:orientation="vertical"
                    android:background="@drawable/post_lost"
                    android:layout_marginTop="@dimen/_20sdp"
                    >
                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/lostPostTitle"
                        android:textSize="@dimen/_20ssp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:fontFamily="cursive">
                    </TextView>
                    <ImageView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:background="@mipmap/album_white"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_15sdp">
                    </ImageView>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:id="@+id/profile_btn"
            android:background="@drawable/adopt_square"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="@dimen/_270sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/profile"
                android:textSize="@dimen/_20ssp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="cursive">
            </TextView>
            <ImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:background="@mipmap/adopt_white"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp">
            </ImageView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>