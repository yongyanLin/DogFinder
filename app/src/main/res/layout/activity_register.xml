<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegisterActivity"
    android:orientation="vertical"
    android:background="@mipmap/dog3">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/app_name"
        android:textSize="@dimen/dimen_60sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="cursive"
        >
    </TextView>
    <LinearLayout
        android:layout_width="@dimen/dimen_350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_form"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="@dimen/dimen_15dp"
            android:layout_width="@dimen/dimen_250dp"
            android:layout_height="@dimen/dimen_50dp"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="@dimen/dimen_50dp"
                android:src="@mipmap/user">
            </ImageView>
            <EditText
                android:textColor="@color/dimgray"
                android:id="@+id/username"
                android:layout_width="@dimen/dimen_200dp"
                android:layout_height="@dimen/dimen_50dp"
                android:hint="@string/username"
                android:textSize="@dimen/dimen_20sp"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:textColorHint="@color/dimgray"
                android:textStyle="bold"
                android:fontFamily="cursive">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dimen_15dp"
            android:layout_width="250dp"
            android:layout_height="@dimen/dimen_50dp"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="@dimen/dimen_50dp"
                android:src="@mipmap/email">
            </ImageView>
            <EditText
                android:textColor="@color/dimgray"
                android:id="@+id/email"
                android:layout_width="@dimen/dimen_200dp"
                android:layout_height="@dimen/dimen_50dp"
                android:hint="@string/email"
                android:textSize="@dimen/dimen_20sp"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:textColorHint="@color/dimgray"
                android:textStyle="bold"
                android:fontFamily="cursive">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/dimen_250dp"
            android:layout_height="@dimen/dimen_50dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_15dp">
            <ImageView
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="@dimen/dimen_50dp"
                android:src="@mipmap/password">
            </ImageView>
            <EditText
                android:textColor="@color/dimgray"
                android:id="@+id/password"
                android:layout_width="@dimen/dimen_200dp"
                android:layout_height="@dimen/dimen_50dp"
                android:hint="@string/password"
                android:textSize="@dimen/dimen_20sp"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:textColorHint="@color/dimgray"
                android:textStyle="bold"
                android:fontFamily="cursive"
                android:inputType="textPassword">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dimen_15dp"
            android:layout_width="@dimen/dimen_250dp"
            android:layout_height="@dimen/dimen_50dp"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="@dimen/dimen_50dp"
                android:src="@mipmap/confirm_password">
            </ImageView>
            <EditText
                android:id="@+id/confirm_password"
                android:layout_width="@dimen/dimen_200dp"
                android:layout_height="@dimen/dimen_50dp"
                android:hint="@string/confirm_password"
                android:textSize="@dimen/dimen_20sp"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:textColorHint="@color/dimgray"
                android:textStyle="bold"
                android:fontFamily="cursive"
                android:textColor="@color/dimgray">
            </EditText>
        </LinearLayout>
        <Button
            android:id="@+id/register"
            android:layout_width="@dimen/dimen_200dp"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:layout_marginBottom="@dimen/dimen_15dp"
            android:layout_gravity="center"
            android:text="@string/Register"
            android:textSize="@dimen/dimen_20sp"
            android:textStyle="bold"
            android:background="@drawable/register_btn">
        </Button>
    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_50dp"
        android:src="@mipmap/back"
        android:layout_marginTop="@dimen/dimen_220dp"
        android:clickable="true"
        android:id="@+id/back">
    </ImageView>
</LinearLayout>