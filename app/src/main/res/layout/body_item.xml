<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/dimen_260dp"
    android:layout_height="match_parent"
    android:background="@color/mintcream"
    >
    <TextView
        android:id="@+id/body_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Very Thin"
        android:layout_gravity="center"
        android:textSize="@dimen/dimen_30sp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textColor="@color/darkslateblue">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/body_image"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_50dp"
            android:background="@mipmap/verythin"
            android:layout_marginTop="@dimen/dimen_20dp">
        </ImageView>
        <TextView
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:id="@+id/body_description"
            android:layout_width="@dimen/dimen_150dp"
            android:layout_height="wrap_content"
            android:text="Ribs, backbone and hip bones easily seen1; with no overlying fat layer Some mid muscle loss particularly noticeable around shoulders and thighs"
            android:layout_gravity="center"
            android:gravity="fill_horizontal"
            android:textStyle="italic"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/darkslateblue">
        </TextView>
    </LinearLayout>
</LinearLayout>