<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/_220sdp"
    android:layout_height="match_parent"
    >
    <TextView
        android:gravity="center"
        android:id="@+id/body_name"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="wrap_content"
        android:text="Very Thin"
        android:layout_gravity="center"
        android:textSize="@dimen/_25ssp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textColor="@color/darkslateblue">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/body_image"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_15sdp">
        </ImageView>
        <TextView
            android:layout_marginLeft="@dimen/_10sdp"
            android:id="@+id/body_description"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:text="Ribs, backbone and hip bones easily seen1; with no overlying fat layer Some mid muscle loss particularly noticeable around shoulders and thighs"
            android:layout_gravity="center"
            android:textStyle="italic"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/darkslateblue">
        </TextView>
    </LinearLayout>
</LinearLayout>