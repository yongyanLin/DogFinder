<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProfileActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/account"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60dp"
            android:text="@string/account"
            android:fontFamily="casual"
            android:gravity="center"
            android:textColor="@color/gray"
            android:textSize="@dimen/dimen_20sp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            ></TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />
        <ImageView
            android:src="@mipmap/profile_light"
            android:id="@+id/profile_photo"
            android:layout_width="@dimen/dimen_80dp"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:text="1930755857@qq.com"
            android:textColor="@color/darkslateblue"
            android:textSize="@dimen/dimen_20sp"
            android:layout_gravity="center"
            android:fontFamily="casual"
            android:layout_marginTop="@dimen/dimen_10dp">
        </TextView>

        <LinearLayout
            android:focusable="true"
            android:background="@drawable/profile_chosen"
            android:clickable="true"
            android:showDividers="beginning"
            android:divider="@drawable/profile_line"
            android:id="@+id/nav_account"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:padding="@dimen/dimen_10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_gravity="center"
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="@dimen/dimen_50dp"
                android:src="@mipmap/profile">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/accountHint"
                android:textSize="@dimen/dimen_25sp"
                android:textColor="@color/gray"
                android:fontFamily="casual"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dimen_50dp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:focusable="true"
            android:background="@drawable/profile_chosen"
            android:clickable="true"
            android:showDividers="beginning"
            android:divider="@drawable/profile_line"
            android:id="@+id/nav_strayPost"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:padding="@dimen/dimen_10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_gravity="center"
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="@dimen/dimen_50dp"
                android:src="@mipmap/gallery_black">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/strayHint"
                android:textSize="@dimen/dimen_25sp"
                android:textColor="@color/gray"
                android:fontFamily="casual"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dimen_50dp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:focusable="true"
            android:background="@drawable/profile_chosen"
            android:clickable="true"
            android:showDividers="beginning"
            android:divider="@drawable/profile_line"
            android:id="@+id/nav_lostPost"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:padding="@dimen/dimen_10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_gravity="center"
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="@dimen/dimen_50dp"
                android:src="@mipmap/lost_dog_black">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/lostHint"
                android:textSize="@dimen/dimen_25sp"
                android:textColor="@color/gray"
                android:fontFamily="casual"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dimen_50dp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/profile_chosen"
            android:focusable="true"
            android:clickable="true"
            android:showDividers="beginning"
            android:divider="@drawable/profile_line"
            android:id="@+id/nav_likePost"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:padding="@dimen/dimen_10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_gravity="center"
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="@dimen/dimen_50dp"
                android:src="@mipmap/like_list">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/likeHint"
                android:textSize="@dimen/dimen_25sp"
                android:textColor="@color/gray"
                android:fontFamily="casual"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dimen_50dp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:focusable="true"
            android:background="@drawable/profile_chosen"
            android:clickable="true"
            android:showDividers="beginning"
            android:divider="@drawable/profile_line"
            android:id="@+id/nav_comment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:padding="@dimen/dimen_10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_gravity="center"
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="@dimen/dimen_50dp"
                android:src="@mipmap/comment">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/commentHint"
                android:textSize="@dimen/dimen_25sp"
                android:textColor="@color/gray"
                android:fontFamily="casual"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dimen_50dp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:focusable="true"
            android:background="@drawable/profile_chosen"
            android:clickable="true"
            android:showDividers="beginning"
            android:divider="@drawable/profile_line"
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:padding="@dimen/dimen_10dp"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dimen_10dp">
            <ImageView
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_gravity="center"
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="@dimen/dimen_50dp"
                android:src="@mipmap/logout">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/logout"
                android:textSize="@dimen/dimen_25sp"
                android:textColor="@color/gray"
                android:fontFamily="casual"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dimen_50dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:clickable="true"
                android:id="@+id/home_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:background="@mipmap/index">
                </ImageView>
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Homepage"
                    android:fontFamily="casual"
                    android:gravity="center">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:clickable="true"
                android:id="@+id/likes_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:background="@mipmap/like_list">
                </ImageView>
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/likeHint"
                    android:fontFamily="casual"
                    android:gravity="center">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:clickable="true"
                android:id="@+id/stray_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:background="@mipmap/gallery_black">
                </ImageView>
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/straydog"
                    android:fontFamily="casual"
                    android:gravity="center">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:clickable="true"
                android:id="@+id/lost_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:background="@mipmap/lost_dog_black">
                </ImageView>
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lostdog"
                    android:fontFamily="casual"
                    android:gravity="center">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:clickable="true"
                android:id="@+id/comments_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:background="@mipmap/comment">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/commentHint"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:textStyle="bold">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:clickable="true"
                android:id="@+id/profile_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:background="@mipmap/profile">
                </ImageView>
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile"
                    android:fontFamily="casual"
                    android:gravity="center">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>