<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.StraySquareActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true">
        <androidx.appcompat.widget.SearchView
            android:layout_gravity="center"
            android:layout_width="@dimen/dimen_300dp"
            android:layout_height="@dimen/dimen_60dp"
            android:id="@+id/search"
            app:queryHint="@string/search"
            >
        </androidx.appcompat.widget.SearchView>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/location_icon"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_60dp"
            android:src="@mipmap/location_icon"
            android:clickable="true">
        </ImageView>
        <Button
            android:id="@+id/filter_btn"
            android:layout_gravity="center"
            android:background="@mipmap/filter"
            android:layout_width="@dimen/dimen_60dp"
            android:layout_height="@dimen/dimen_60dp">
        </Button>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/dog_profile"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView

                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_280dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:id="@+id/dog_img"
                ></ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:id="@+id/dog_breed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/breed"
                        android:textSize="@dimen/dimen_20sp"
                        android:layout_marginLeft="@dimen/dimen_50dp"
                        android:fontFamily="casual"
                        android:textColor="@color/grey">
                    </TextView>

                    <TextView
                        android:id="@+id/dog_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:fontFamily="casual"
                        android:text="distance"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/dimen_20sp"
                        android:layout_marginRight="@dimen/dimen_50dp"
                        ></TextView>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:id="@+id/view_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/breed"
                        android:textSize="@dimen/dimen_20sp"
                        android:layout_marginLeft="@dimen/dimen_50dp"
                        android:fontFamily="casual"
                        android:textColor="@color/grey">
                    </TextView>
                    <LinearLayout
                        android:layout_width="@dimen/dimen_130dp"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:clickable="true"
            android:id="@+id/home_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:background="@mipmap/index">
            </ImageView>
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Homepage"
                android:fontFamily="casual"
                android:gravity="center">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:clickable="true"
            android:id="@+id/likes_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:background="@mipmap/like_list">
            </ImageView>
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/likeHint"
                android:fontFamily="casual"
                android:gravity="center">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:clickable="true"
            android:id="@+id/stray_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:background="@mipmap/gallery_black">
            </ImageView>
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/straydog"
                android:fontFamily="casual"
                android:gravity="center">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:clickable="true"
            android:id="@+id/lost_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:background="@mipmap/lost_dog_black">
            </ImageView>
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lostdog"
                android:fontFamily="casual"
                android:gravity="center">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:clickable="true"
            android:id="@+id/comments_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:background="@mipmap/comment">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/commentHint"
                android:fontFamily="casual"
                android:gravity="center"
                android:textStyle="bold">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:clickable="true"
            android:id="@+id/profile_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:background="@mipmap/profile">
            </ImageView>
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile"
                android:fontFamily="casual"
                android:gravity="center">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>