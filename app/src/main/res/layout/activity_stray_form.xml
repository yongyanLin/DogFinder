<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.StrayFormActivity"
    android:background="@color/mintcream">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/back_index"
                android:background="@mipmap/back_icon">
            </Button>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/indexTitle"
                android:textColor="@color/darkslateblue"
                android:textStyle="bold"
                android:textSize="@dimen/_25ssp"
                android:fontFamily="cursive"
                android:layout_marginLeft="@dimen/_40sdp"
                >
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_60sdp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@mipmap/dog_icon">
                </ImageView>
                <EditText
                    android:hint="@string/breed"
                    android:id="@+id/breed"
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="@string/breed"
                    android:textColorHint="@color/darkslateblue"
                    android:textSize="@dimen/_25ssp"
                    android:textColor="@color/darkslateblue"
                    android:gravity="center"
                    android:fontFamily="cursive"
                    android:textStyle="bold">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_60sdp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@mipmap/body_icon">
                </ImageView>
                <Spinner
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:id="@+id/body_spinner"
                    >
                </Spinner>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_60sdp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@mipmap/characteristic_icon">
                </ImageView>
                <Spinner
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:id="@+id/behavior_spinner">
                </Spinner>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_60sdp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@mipmap/size_icon">
                </ImageView>
                <Spinner
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:id="@+id/stray_size_spinner">
                </Spinner>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_60sdp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@mipmap/color_icon"
                     >
                </ImageView>
                <TextView
                    android:clickable="true"
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:id="@+id/color"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:hint="@string/colorHint"
                    android:textColorHint="@color/darkslateblue"
                    android:textColor="@color/darkslateblue"
                    android:textSize="@dimen/_15ssp"
                    android:fontFamily="cursive"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:drawablePadding="@dimen/_8sdp"
                    >
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@mipmap/image_icon">
                </ImageView>
                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/dog_photo"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="@dimen/_180sdp">
                </ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_60sdp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@mipmap/description_icon">
                </ImageView>
                <EditText
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:id="@+id/description"
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/darkslateblue"
                    android:hint="@string/description"
                    android:textStyle="bold"
                    android:fontFamily="cursive"
                    android:textColor="@color/darkslateblue">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_60sdp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@mipmap/location_icon">
                </ImageView>
                <TextView

                    android:clickable="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:id="@+id/location"
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkslateblue"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15ssp"
                    android:fontFamily="cursive"
                    android:gravity="center"
                    android:text="@string/Location">
                </TextView>
            </LinearLayout>

        </LinearLayout>
        <Button
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/publish"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center"
            android:background="@drawable/stray_square"
            android:text="@string/publish"
            android:fontFamily="serif-monospace"
            android:textColor="@color/white"
            android:textSize="@dimen/_25ssp"
            android:textAllCaps="false"
            android:textStyle="bold">
        </Button>
    </LinearLayout>
</ScrollView>