<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AccountActivity"
    android:id="@+id/profileLayout"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60dp"
            android:background="@color/cornflowerblue"
            android:orientation="horizontal">

            <Button
                android:id="@+id/back_profile"
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_gravity="center"
                android:background="@mipmap/back_white"></Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_100dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:fontFamily="casual"
                android:text="@string/account"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_30sp"
                android:textStyle="bold"></TextView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:fontFamily="casual"
            android:text="@string/accountTile"
            android:textSize="@dimen/dimen_20sp"></TextView>

        <ImageView
            android:id="@+id/profile_photo"
            android:layout_width="@dimen/dimen_80dp"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/profile_photo"
            android:clickable="true"
            android:src="@mipmap/profile_light"></ImageView>

        <EditText
            android:id="@+id/username_field"
            android:layout_width="@dimen/dimen_300dp"
            android:layout_height="@dimen/dimen_60dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:divider="@drawable/profile_line"
            android:fontFamily="casual"
            android:hint="@string/username"
            android:padding="@dimen/dimen_5dp"
            android:paddingLeft="@dimen/dimen_10dp"
            android:showDividers="end"
            android:textSize="@dimen/dimen_20sp"></EditText>

        <TextView
            android:id="@+id/email_field"
            android:layout_width="@dimen/dimen_300dp"
            android:layout_height="@dimen/dimen_60dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:divider="@drawable/profile_line"
            android:fontFamily="casual"
            android:padding="@dimen/dimen_5dp"
            android:paddingLeft="@dimen/dimen_10dp"
            android:showDividers="end"
            android:textSize="@dimen/dimen_20sp"></TextView>

        <Button
            android:id="@+id/save_btn"
            android:layout_width="@dimen/dimen_200dp"
            android:layout_height="@dimen/dimen_60dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_40dp"
            android:background="@drawable/save_btn"
            android:fontFamily="cursive"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_20sp"
            android:textStyle="bold"></Button>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:clickable="true"
            android:id="@+id/home_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:background="@mipmap/index">
            </ImageView>
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Homepage"
                android:fontFamily="casual"
                android:gravity="center">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:clickable="true"
            android:id="@+id/likes_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:background="@mipmap/like_list">
            </ImageView>
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/likeHint"
                android:fontFamily="casual"
                android:gravity="center">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:clickable="true"
            android:id="@+id/stray_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:background="@mipmap/gallery_black">
            </ImageView>
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/straydog"
                android:fontFamily="casual"
                android:gravity="center">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:clickable="true"
            android:id="@+id/lost_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:background="@mipmap/lost_dog_black">
            </ImageView>
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lostdog"
                android:fontFamily="casual"
                android:gravity="center">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:clickable="true"
            android:id="@+id/comments_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:background="@mipmap/comment">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/commentHint"
                android:fontFamily="casual"
                android:gravity="center"
                android:textStyle="bold">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:clickable="true"
            android:id="@+id/profile_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:background="@mipmap/profile">
            </ImageView>
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile"
                android:fontFamily="casual"
                android:gravity="center">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
