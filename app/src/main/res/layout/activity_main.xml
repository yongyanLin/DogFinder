<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@mipmap/dog1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/app_name"
        android:textSize="@dimen/_50ssp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:layout_marginTop="@dimen/_40sdp">
    </TextView>
    <LinearLayout
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_form"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_150sdp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@mipmap/email">
            </ImageView>
            <EditText
                android:textColor="@color/dimgray"
                android:id="@+id/email"
                android:inputType="textEmailAddress"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_40sdp"
                android:hint="@string/email"
                android:textSize="@dimen/_15ssp"
                android:textColorHint="@color/dimgray"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textStyle="bold"
                android:fontFamily="cursive">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp">
            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@mipmap/password">
            </ImageView>
            <EditText
                android:textColor="@color/dimgray"
                android:id="@+id/password"
                android:inputType="textPassword"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_40sdp"
                android:hint="@string/password"
                android:textSize="@dimen/_15ssp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColorHint="@color/dimgray"
                android:textStyle="bold"
                android:fontFamily="cursive">
            </EditText>
        </LinearLayout>
        <Button
            android:textColor="@color/white"
            android:id="@+id/login"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_gravity="center"
            android:text="@string/login"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            android:background="@drawable/login_btn">
        </Button>
        <TextView
            android:id="@+id/register_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registerHint"
            android:textStyle="bold"
            android:fontFamily="cursive"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/darkslateblue"
            android:layout_gravity="center"
            android:clickable="true"
            android:layout_marginBottom="@dimen/_10sdp">
        </TextView>
        <TextView
            android:id="@+id/reset_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resetPassword"
            android:textStyle="bold"
            android:fontFamily="cursive"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/palevioletred"
            android:layout_gravity="center"
            android:clickable="true"
            android:layout_marginBottom="@dimen/_20sdp">
        </TextView>
    </LinearLayout>
</LinearLayout>