<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dimen_10dp"
    app:cardElevation="@dimen/dimen_10dp"
    android:layout_margin="@dimen/dimen_10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_marginRight="@dimen/dimen_5dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_280dp"
            android:scaleType="fitXY"
            android:id="@+id/dog_image">
        </ImageView>
        <LinearLayout
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/breed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:fontFamily="casual"
                    android:text="Pug"
                    android:textColor="@color/darkslateblue"
                    android:textSize="@dimen/dimen_20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:fontFamily="casual"
                    android:text=". 0.8 miles away"
                    android:textColor="@color/darkslateblue"
                    android:textSize="@dimen/dimen_15sp"
                    android:textStyle="bold"></TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_5dp">

                <TextView
                    android:id="@+id/profile_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:clickable="true"
                    android:fontFamily="casual"
                    android:text="@string/profileLink"
                    android:textColor="@color/darkslateblue"
                    android:textSize="@dimen/dimen_20sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true">
                    <ToggleButton
                        android:textOn=""
                        android:textOff=""
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:id="@+id/add_like"
                        android:layout_width="@dimen/dimen_30dp"
                        android:layout_height="@dimen/dimen_30dp"
                        android:background="@drawable/heart_selector"
                        >
                    </ToggleButton>
                    <Button
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:layout_width="@dimen/dimen_30dp"
                        android:layout_height="@dimen/dimen_30dp"
                        android:background="@mipmap/comment"
                        android:id="@+id/add_comment"
                        >
                    </Button>
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:clickable="true"
                android:id="@+id/show_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/commentTitle"
                android:textSize="@dimen/dimen_15sp"
                android:textStyle="bold"
                android:fontFamily="casual"
                android:textColor="@color/darkslateblue"
                ></TextView>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>