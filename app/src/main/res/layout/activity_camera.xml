<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".CameraUtil.CameraActivity">

    <ToggleButton
        android:id="@+id/continuousInferenceButton"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dimen_30dp"
        android:layout_marginBottom="@dimen/dimen_100dp"
        android:background="@drawable/roundedbutton"
        android:translationZ="@dimen/dimen_50dp"
        tools:ignore="RtlHardcoded,SmallSp" />
    <ImageButton
        android:id="@+id/exitButton"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/dimen_60dp"
        android:layout_marginLeft="@dimen/dimen_30dp"
        android:layout_alignStart="@id/continuousInferenceButton"
        android:layout_alignTop="@+id/continuousInferenceButton"
        android:background="@drawable/roundedbutton"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:translationZ="@dimen/dimen_200dp"

         />
    <ImageButton
        android:id="@+id/cameraButton"
        android:layout_width="@dimen/dimen_65dp"
        android:layout_height="@dimen/dimen_65dp"
        android:layout_alignTop="@+id/continuousInferenceButton"
        android:layout_centerHorizontal="true"
        android:background="@drawable/roundedbutton"
        android:src="@mipmap/camera_icon"
        android:translationZ="@dimen/dimen_50dp" />

    <ImageButton
        android:id="@+id/galleryButton"
        android:layout_width="@dimen/dimen_65dp"
        android:layout_height="@dimen/dimen_65dp"
        android:layout_alignTop="@+id/continuousInferenceButton"
        android:layout_alignParentRight="true"
        android:background="@drawable/roundedbutton"
        android:src="@mipmap/gallery_red"
        android:translationZ="@dimen/dimen_50dp" />
    <ImageButton
        android:id="@+id/shareButton"
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_alignTop="@+id/continuousInferenceButton"
        android:layout_centerHorizontal="true"
        android:background="@drawable/roundedbutton"
        android:src="@android:drawable/ic_menu_share"
        android:translationZ="@dimen/dimen_200dp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/saveButton"
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_alignTop="@+id/continuousInferenceButton"
        android:layout_marginEnd="@dimen/dimen_50dp"
        android:layout_toStartOf="@+id/cameraButton"
        android:background="@drawable/roundedbutton"
        android:src="@mipmap/finish"
        android:translationZ="@dimen/dimen_200dp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/closeButton"
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_alignTop="@+id/continuousInferenceButton"
        android:layout_marginStart="@dimen/dimen_50dp"
        android:layout_toEndOf="@+id/cameraButton"
        android:background="@drawable/roundedbutton"
        android:src="@mipmap/back_icon"
        android:translationZ="@dimen/dimen_200dp"
        android:visibility="gone" />

    <com.example.dogfinder.CameraUtil.RecognitionScoreView
        android:id="@+id/results"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_130dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/button_background_selector"
        android:elevation="@android:dimen/app_icon_size"
        android:enabled="false"
        android:paddingLeft="@dimen/dimen_5dp"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="@dimen/dimen_20sp"
        android:translationZ="@dimen/dimen_200dp"
        tools:ignore="RtlHardcoded,RtlSymmetry" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:translationZ="@dimen/dimen_200dp" />

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blackout_transition"
        android:translationZ="@dimen/dimen_50dp"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.Holo.ProgressBar.Large"
        android:layout_width="@dimen/dimen_100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:translationZ="@dimen/dimen_200dp"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/pnlFlash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:translationZ="@dimen/dimen_200dp"
        android:visibility="gone" />

</RelativeLayout>