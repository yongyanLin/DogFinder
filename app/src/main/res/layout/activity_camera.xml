<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".TensorflowLiteUtil.CameraActivity">

    <ToggleButton
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/continuousInferenceButton"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_70sdp"
        android:background="@drawable/roundedbutton"
        android:translationZ="@dimen/_50sdp"
        tools:ignore="RtlHardcoded,SmallSp" />

    <ImageButton
        android:id="@+id/exitButton"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignStart="@id/continuousInferenceButton"
        android:layout_alignTop="@+id/continuousInferenceButton"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_60sdp"
        android:background="@drawable/roundedbutton"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:translationZ="@dimen/_200sdp" />
    <ImageButton
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/cameraButton"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignTop="@+id/continuousInferenceButton"
        android:layout_centerHorizontal="true"
        android:background="@drawable/roundedbutton"
        android:src="@mipmap/camera_icon"
        android:translationZ="@dimen/_40sdp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:clickable="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/galleryButton"
        android:layout_width="@dimen/_42sdp"
        android:layout_height="@dimen/_42sdp"
        android:layout_alignTop="@+id/continuousInferenceButton"
        android:layout_alignParentRight="true"
        android:src="@mipmap/gallery_red"
        android:translationZ="@dimen/_40sdp" />
    <ImageButton
        android:id="@+id/shareButton"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_alignTop="@+id/continuousInferenceButton"
        android:layout_centerHorizontal="true"
        android:background="@drawable/roundedbutton"
        android:src="@android:drawable/ic_menu_share"
        android:translationZ="@dimen/_200sdp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/saveButton"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignTop="@+id/continuousInferenceButton"
        android:layout_marginEnd="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_toStartOf="@+id/cameraButton"
        android:background="@drawable/roundedbutton"
        android:src="@mipmap/finish"
        android:translationZ="@dimen/_200sdp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/closeButton"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignTop="@+id/continuousInferenceButton"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_toEndOf="@+id/cameraButton"
        android:background="@drawable/roundedbutton"
        android:src="@mipmap/back_icon"
        android:translationZ="@dimen/_200sdp"
        android:visibility="gone" />

    <com.example.dogfinder.TensorflowLiteUtil.RecognitionScoreView
        android:id="@+id/results"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_alignParentTop="true"
        android:background="@drawable/button_background_selector"
        android:elevation="@android:dimen/app_icon_size"
        android:enabled="false"
        android:paddingLeft="@dimen/_5sdp"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="@dimen/_20ssp"
        android:translationZ="@dimen/_200sdp"
        tools:ignore="RtlHardcoded,RtlSymmetry" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/blackout_transition"
        android:translationZ="@dimen/_50sdp"
        android:visibility="gone" />
    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.Holo.ProgressBar.Large"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:translationZ="@dimen/_200sdp"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/pnlFlash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:translationZ="@dimen/_200sdp"
        android:visibility="gone" />

</RelativeLayout>